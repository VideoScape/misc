blueprint:
  name: 3way-light-sync-bond
  description: 3way-light-sync-bond
  domain: automation
  source_url: https://raw.githubusercontent.com/VideoScape/misc/main/3way-light-sync-bond
  input:
    light_1:
      name: Light 1
      selector:
        entity:
        
    light_2:
      name: Light 2
      selector:
        entity:

     light_3:
      name: Light 2
      selector:
        entity:
         
trigger:
- entity_id:
  - !input 'light_1'
  - !input 'light_2'
  - !input 'light_3'
  platform: state
- entity_id:
  - !input 'light_1'
  - !input 'light_2'
  - !input 'light_3'
  platform: state
  attribute: brightness
action:
- entity_id:
  - !input 'light_1'
  - !input 'light_2'
  - !input 'light_3'
  service: '{% if trigger.to_state.state == "on" %} light.turn_on {% elif trigger.to_state.state
    == "off" %} light.turn_off {% endif %}'
- entity_id:
  - !input 'light_1'
  - !input 'light_2'
  - !input 'light_3'
  condition: state
  state: 'on'
- service: light.turn_on
  data:
    brightness: '{{ trigger.to_state.attributes.brightness }}'
  entity_id:
  - !input 'light_1'
  - !input 'light_2'
  - !input 'light_3'
